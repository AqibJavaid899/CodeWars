def likes(names):
    if len(names) is 0:
        return 'no one likes this'
    elif len(names) is 1: 
        return ('{} likes this'.format(names[0]))
    elif len(names) is 2:
        return ('{} and {} like this'.format(names[0],names[1]))
    elif len(names) is 3:
        return ('{}, {} and {} like this'.format(names[0],names[1],names[2]))
    else:
        return ('{}, {} and {} others like this'
        .format(names[0],names[1],len(names) - 2))
